{
  "description" : "A schema for representing a poll with options and metadata.",
  "properties" : {
    "category" : {
      "description" : "Category of the poll, limited to specific types",
      "oneOf" : [
        {
          "properties" : {
            "technology" : {
              "properties" : {
                "_0" : {
                  "properties" : {
                    "hasDemo" : {
                      "type" : "boolean"
                    },
                    "subTopic" : {
                      "type" : "string"
                    }
                  },
                  "required" : [
                    "subTopic",
                    "hasDemo"
                  ],
                  "type" : "object"
                }
              },
              "required" : [
                "_0"
              ],
              "type" : "object"
            }
          },
          "required" : [
            "technology"
          ],
          "type" : "object"
        },
        {
          "properties" : {
            "entertainment" : {
              "properties" : {
                "_0" : {
                  "properties" : {
                    "ageRating" : {
                      "enum" : [
                        "General Audience",
                        "Parental Guidance Suggested",
                        "Parental Guidance Suggested 13+",
                        "Restricted"
                      ],
                      "type" : "string"
                    },
                    "genre" : {
                      "enum" : [
                        "movies",
                        "music",
                        "games",
                        "television"
                      ],
                      "type" : "string"
                    }
                  },
                  "required" : [
                    "genre",
                    "ageRating"
                  ],
                  "type" : "object"
                }
              },
              "required" : [
                "_0"
              ],
              "type" : "object"
            }
          },
          "required" : [
            "entertainment"
          ],
          "type" : "object"
        },
        {
          "properties" : {
            "education" : {
              "properties" : {
                "_0" : {
                  "properties" : {
                    "level" : {
                      "type" : "string"
                    },
                    "subject" : {
                      "enum" : [
                        "math",
                        "science",
                        "history",
                        "english",
                        "art",
                        "music",
                        "foreignLanguage"
                      ],
                      "type" : "string"
                    }
                  },
                  "required" : [
                    "subject",
                    "level"
                  ],
                  "type" : "object"
                }
              },
              "required" : [
                "_0"
              ],
              "type" : "object"
            }
          },
          "required" : [
            "education"
          ],
          "type" : "object"
        },
        {
          "enum" : [
            "sports",
            "other"
          ],
          "type" : "string"
        }
      ]
    },
    "createdAt" : {
      "format" : "date-time",
      "type" : "string"
    },
    "description" : {
      "description" : "Optional description of the poll",
      "maxLength" : 500,
      "type" : [
        "string",
        "null"
      ]
    },
    "expiresAt" : {
      "description" : "Optional expiration timestamp for the poll",
      "format" : "date-time",
      "type" : [
        "string",
        "null"
      ]
    },
    "id" : {
      "description" : "Unique identifier for the poll",
      "minimum" : 1,
      "type" : "integer"
    },
    "isActive" : {
      "default" : true,
      "description" : "Whether the poll is currently active",
      "type" : "boolean"
    },
    "options" : {
      "description" : "List of options available in the poll",
      "items" : {
        "additionalProperties" : false,
        "properties" : {
          "id" : {
            "description" : "Unique identifier for the poll",
            "minimum" : 1,
            "type" : "integer"
          },
          "text" : {
            "description" : "Option text",
            "maxLength" : 100,
            "minLength" : 1,
            "type" : "string"
          },
          "voteCount" : {
            "default" : 0,
            "description" : "Number of votes received",
            "minimum" : 0,
            "type" : "integer"
          }
        },
        "required" : [
          "id",
          "text",
          "voteCount"
        ],
        "type" : "object"
      },
      "minItems" : 2,
      "type" : "array",
      "uniqueItems" : true
    },
    "settings" : {
      "oneOf" : [
        {
          "properties" : {
            "allowMultipleVotes" : {
              "default" : true,
              "type" : "boolean"
            },
            "requireAuthentication" : {
              "default" : false,
              "type" : "boolean"
            }
          },
          "required" : [
            "allowMultipleVotes",
            "requireAuthentication"
          ],
          "type" : "object"
        },
        {
          "type" : "null"
        }
      ]
    },
    "title" : {
      "description" : "The title of the poll",
      "maxLength" : 200,
      "minLength" : 1,
      "type" : "string"
    }
  },
  "required" : [
    "id",
    "title",
    "createdAt",
    "isActive",
    "options",
    "category"
  ],
  "title" : "Poll",
  "type" : "object"
}